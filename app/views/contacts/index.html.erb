<div>
  <div>
    <h1>
      List of all contacts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new contact
    </h2>

    <form action="/insert_contact" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="firm_name_box">
          Firm name
        </label>

        <input type="text" id="firm_name_box" name="query_firm_name">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create contact
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Firm name
        </th>

        <th>
          Role
        </th>

        <th>
          Email
        </th>

        <th>
          Status
        </th>

        <th>
          Firm
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_contacts.each do |a_contact| %>
      <tr>
        <td>
          <%= a_contact.id %>
        </td>

        <td>
          <%= a_contact.first_name %>
        </td>

        <td>
          <%= a_contact.last_name %>
        </td>

        <td>
          <%= a_contact.firm_name %>
        </td>

        <td>
          <%= a_contact.role %>
        </td>

        <td>
          <%= a_contact.email %>
        </td>

        <td>
          <%= a_contact.status %>
        </td>

        <td>
          <%= a_contact.firm_id %>
        </td>

        <td>
          <%= a_contact.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_contact.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_contact.updated_at) %> ago
        </td>

        <td>
          <a href="/contacts/<%= a_contact.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
