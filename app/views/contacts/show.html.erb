<div>
  <div>
    <h1>
      Contact #<%= @the_contact.id %> details
    </h1>

    <div>
      <div>
        <a href="/contacts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_contact/<%= @the_contact.id %>">
          Delete contact
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_contact.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_contact.last_name %>
      </dd>

      <dt>
        Firm name
      </dt>
      <dd>
        <%= @the_contact.firm_name %>
      </dd>

      <dt>
        Role
      </dt>
      <dd>
        <%= @the_contact.role %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_contact.email %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_contact.status %>
      </dd>

      <dt>
        Firm
      </dt>
      <dd>
        <%= @the_contact.firm_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_contact.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit contact
    </h2>

    <form action="/modify_contact/<%= @the_contact.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_contact.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_contact.last_name %>">
      </div>

      <div>
        <label for="firm_name_box">
          Firm name
        </label>

        <input type="text" id="firm_name_box" name="query_firm_name" value="<%= @the_contact.firm_name %>">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role" value="<%= @the_contact.role %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @the_contact.email %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_contact.status %>">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id" value="<%= @the_contact.firm_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_contact.user_id %>">
      </div>

      <button>
        Update contact
      </button>
    </form>
  </div>
</div>

<hr>
