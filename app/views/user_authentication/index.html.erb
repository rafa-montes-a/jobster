<% if @current_user.email == "rmontes@chicagobooth.edu" %>

  <h2>
    <i class="bi bi-wrench-adjustable-circle-fill"></i> Admin settings - Users
  </h2>

  <br>

  <div>

  
  <div class="list-group">
    <% @list_of_users.each do |a_user| %>
      <button type="button" class="list-group-item list-group-item-action parent-button" onclick="window.location.href='#'">
        <div class="col">
          <div class="row d-flex justify-content-between">
            
            <div class="col-md-1 mb-1 text-truncate">
                <%= a_user.id %>
            </div>

            <div class="col-md-2 mb-1 text-truncate">
              <%= a_user.first_name %> <%= a_user.last_name %>
            </div>

            <div class="col mb-1 text-truncate">
              <%= a_user.email %>            
            </div>

            <div class="col mb-1 text-truncate">
              <span class="badge rounded-pill text-bg-light"> <%= a_user.jobs.count %> jobs</span>
            </div>

            <div class="col mb-1 text-truncate">
              <span class="badge rounded-pill text-bg-light"> <%= a_user.firms.count %> companies</span>
            </div>

            <div class="col mb-1 text-truncate">
              <span class="badge rounded-pill text-bg-light"> <%= a_user.contacts.count %> contacts</span>
            </div>

            <div class="col mb-1">
              <%= a_user.created_at.strftime("%B %d, %Y") %>
            </div>

          </div>
        </div>    
      </button>

    <% end %>
    
  </div>
  <br>
</div>



<% else %>
  This site is empty
<% end %>
