<div>
  <div>
    <h1>
      Job #<%= @the_job.id %> details
    </h1>

    <div>
      <div>
        <a href="/jobs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_job/<%= @the_job.id %>">
          Delete job
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Firm name
      </dt>
      <dd>
        <%= @the_job.firm_name %>
      </dd>

      <dt>
        Role
      </dt>
      <dd>
        <%= @the_job.role %>
      </dd>

      <dt>
        Job desc
      </dt>
      <dd>
        <%= @the_job.job_desc %>
      </dd>

      <dt>
        Job desc link
      </dt>
      <dd>
        <%= @the_job.job_desc_link %>
      </dd>

      <dt>
        Follow up link
      </dt>
      <dd>
        <%= @the_job.follow_up_link %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_job.status %>
      </dd>

      <dt>
        Summary job desc
      </dt>
      <dd>
        <%= @the_job.summary_job_desc %>
      </dd>

      <dt>
        Country
      </dt>
      <dd>
        <%= @the_job.country %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_job.city %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_job.state %>
      </dd>

      <dt>
        Job number
      </dt>
      <dd>
        <%= @the_job.job_number %>
      </dd>

      <dt>
        Firm
      </dt>
      <dd>
        <%= @the_job.firm_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_job.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_job.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_job.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit job
    </h2>

    <form action="/modify_job/<%= @the_job.id %>"  method="post" >
      <div>
        <label for="firm_name_box">
          Firm name
        </label>

        <input type="text" id="firm_name_box" name="query_firm_name" value="<%= @the_job.firm_name %>">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role" value="<%= @the_job.role %>">
      </div>

      <div>
        <label for="job_desc_box">
          Job desc
        </label>

        <textarea id="job_desc_box" name="query_job_desc"><%= @the_job.job_desc %></textarea>
      </div>

      <div>
        <label for="job_desc_link_box">
          Job desc link
        </label>

        <input type="text" id="job_desc_link_box" name="query_job_desc_link" value="<%= @the_job.job_desc_link %>">
      </div>

      <div>
        <label for="follow_up_link_box">
          Follow up link
        </label>

        <input type="text" id="follow_up_link_box" name="query_follow_up_link" value="<%= @the_job.follow_up_link %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_job.status %>">
      </div>

      <div>
        <label for="summary_job_desc_box">
          Summary job desc
        </label>

        <textarea id="summary_job_desc_box" name="query_summary_job_desc"><%= @the_job.summary_job_desc %></textarea>
      </div>

      <div>
        <label for="country_box">
          Country
        </label>

        <input type="text" id="country_box" name="query_country" value="<%= @the_job.country %>">
      </div>

      <div>
        <label for="city_box">
          City
        </label>

        <input type="text" id="city_box" name="query_city" value="<%= @the_job.city %>">
      </div>

      <div>
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state" value="<%= @the_job.state %>">
      </div>

      <div>
        <label for="job_number_box">
          Job number
        </label>

        <input type="text" id="job_number_box" name="query_job_number" value="<%= @the_job.job_number %>">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id" value="<%= @the_job.firm_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_job.user_id %>">
      </div>

      <button>
        Update job
      </button>
    </form>
  </div>
</div>

<hr>
