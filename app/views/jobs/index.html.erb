<div>
  <div>
    <h1>
      List of all jobs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new job
    </h2>

    <form action="/insert_job" method="post">
      <div>
        <label for="firm_name_box">
          Firm name
        </label>

        <input type="text" id="firm_name_box" name="query_firm_name">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="job_desc_box">
          Job desc
        </label>

        <textarea id="job_desc_box" name="query_job_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="job_desc_link_box">
          Job desc link
        </label>

        <input type="text" id="job_desc_link_box" name="query_job_desc_link">
      </div>

      <div>
        <label for="follow_up_link_box">
          Follow up link
        </label>

        <input type="text" id="follow_up_link_box" name="query_follow_up_link">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="summary_job_desc_box">
          Summary job desc
        </label>

        <textarea id="summary_job_desc_box" name="query_summary_job_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="country_box">
          Country
        </label>

        <input type="text" id="country_box" name="query_country">
      </div>

      <div>
        <label for="city_box">
          City
        </label>

        <input type="text" id="city_box" name="query_city">
      </div>

      <div>
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state">
      </div>

      <div>
        <label for="job_number_box">
          Job number
        </label>

        <input type="text" id="job_number_box" name="query_job_number">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create job
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Firm name
        </th>

        <th>
          Role
        </th>

        <th>
          Job desc
        </th>

        <th>
          Job desc link
        </th>

        <th>
          Follow up link
        </th>

        <th>
          Status
        </th>

        <th>
          Summary job desc
        </th>

        <th>
          Country
        </th>

        <th>
          City
        </th>

        <th>
          State
        </th>

        <th>
          Job number
        </th>

        <th>
          Firm
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_jobs.each do |a_job| %>
      <tr>
        <td>
          <%= a_job.id %>
        </td>

        <td>
          <%= a_job.firm_name %>
        </td>

        <td>
          <%= a_job.role %>
        </td>

        <td>
          <%= a_job.job_desc %>
        </td>

        <td>
          <%= a_job.job_desc_link %>
        </td>

        <td>
          <%= a_job.follow_up_link %>
        </td>

        <td>
          <%= a_job.status %>
        </td>

        <td>
          <%= a_job.summary_job_desc %>
        </td>

        <td>
          <%= a_job.country %>
        </td>

        <td>
          <%= a_job.city %>
        </td>

        <td>
          <%= a_job.state %>
        </td>

        <td>
          <%= a_job.job_number %>
        </td>

        <td>
          <%= a_job.firm_id %>
        </td>

        <td>
          <%= a_job.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_job.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_job.updated_at) %> ago
        </td>

        <td>
          <a href="/jobs/<%= a_job.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
