
<h1>
  My job applications
</h1>

<hr>

<form action="/insert_job" method="post">

  <div class="row">
    
    <div class="col-md-2 mb-3">
        <label for="firm_name_box" class="form-label">Company*</label>
        <input id="firm_name_box" name="query_firm_name" type="text" class="form-control">
    </div>

    <div class="col-md-2 mb-3">
        <label for="role_box" class="form-label">Role*</label>
        <input id="role_box" name="query_role" type="text" class="form-control">
    </div>

    <div class="col-md-2 mb-3">
        <label for="job_desc_link_box" class="form-label">Link to job description</label>
        <input id="job_desc_link_box" name="query_job_desc_link" type="text" class="form-control" placeholder="https://jobposting.site">
    </div>

    <div class="col-md-2 mb-3">
        <label for="follow_up_link_box" class="form-label">Link to follow up</label>
        <input id="follow_up_link_box" name="query_follow_up_link" type="text" class="form-control" placeholder="https://company.jobs">
    </div>

    <div class="col-md-1 mb-3">
        <label for="job_number_box" class="form-label">Job number</label>
        <input id="job_number_box" name="query_job_number" type="text" class="form-control" placeholder="R436210">
    </div>

    <div class="col-md-1 mb-3">
        <label for="country_box" class="form-label">Country</label>
        <input id="country_box" name="query_country" type="text" class="form-control" value="USA">
    </div>

    <div class="col-md-1 mb-3">
        <label for="state_box" class="form-label">State</label>
        <input id="state_box" name="query_state" type="text" class="form-control">
    </div>

    <div class="col-md-1 mb-3">
        <label for="city_box" class="form-label">City</label>
        <input id="city_box" name="query_city" type="text" class="form-control">
    </div>


  </div>

  <div class="row">
    <div class="col-md-11 mb-3">
        <input id="job_desc_box" name="query_job_desc" type="text" class="form-control" placeholder ="Paste job description for future use">
    </div>

    <div class="col-md-1 mb-3 my-auto">
      <button class="btn btn-primary">Add job</button>
    </div>
  </div>

</form>

<br>

<div class="list-group">
  <button type="button" class="list-group-item list-group-item-action bg-success text-white">Status: Interview</button>

  <% @current_user.jobs.each do |a_job| %>

    <button type="button" class="list-group-item list-group-item-action" onclick="window.location.href='/jobs/<%= a_job.id %>'">
      
      <div class="col">
        <div class="row d-flex justify-content-between">
          
          <div class="col-md-3">
              <%= a_job.firm_name %>
          </div>

          <div class="col-md-4">
            <%= a_job.role %>
          </div>

          <div class="col-md-2">
            <%= a_job.country %> 
            <%= a_job.state %> 
            <%= a_job.city %> 
          </div>

          <div class="col-md-2 text-end">

            <% if @current_user.contacts.where({ :firm_id => a_job.firm_id }).count == 0 %>
              <span class="badge rounded-pill text-bg-secondary"> <%= @current_user.contacts.where({ :firm_id => a_job.firm_id }).count %> contacts</span>            
            <% else %>
              <span class="badge rounded-pill text-bg-success"> <%= @current_user.contacts.where({ :firm_id => a_job.firm_id }).count %> contacts</span>
            <% end %>

          </div>

          <div class="col-md-1 text-end">
            <a href="/jobs/edit/<%= a_job.id %>" class="btn btn-secondary btn-sm">Edit</a>
          </div>        
      </div>
    
    </button>
  <% end %>

</div>
