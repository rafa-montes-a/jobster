<div>
  <div>
    <h1>
      List of all touchpoints
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new touchpoint
    </h2>

    <form action="/insert_touchpoint" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="time" id="date_box" name="query_date">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="contact_id_box">
          Contact
        </label>

        <input type="text" id="contact_id_box" name="query_contact_id">
      </div>

      <button>
        Create touchpoint
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Date
        </th>

        <th>
          Notes
        </th>

        <th>
          Contact
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_touchpoints.each do |a_touchpoint| %>
      <tr>
        <td>
          <%= a_touchpoint.id %>
        </td>

        <td>
          <%= a_touchpoint.description %>
        </td>

        <td>
          <%= a_touchpoint.date %>
        </td>

        <td>
          <%= a_touchpoint.notes %>
        </td>

        <td>
          <%= a_touchpoint.contact_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_touchpoint.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_touchpoint.updated_at) %> ago
        </td>

        <td>
          <a href="/touchpoints/<%= a_touchpoint.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
