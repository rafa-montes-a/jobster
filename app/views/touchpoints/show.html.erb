
<div class="col-sm-12">
  <div class="card">
    <h5 class="card-header">
      <div class="row d-flex justify-content-between">          
          <div class="col">
            <%= @the_touchpoint.description %> with <%= @the_touchpoint.contact.first_name %> <%= @the_touchpoint.contact.last_name %>
          </div>
         
          <div class="col-md-3 text-end">

              <a href="/delete_touchpoint/<%= @the_touchpoint.id %>>" title="Delete" class="btn btn-outline-danger btn-sm cancel-button" onclick="confirmDelete(event, <%= @the_touchpoint.id %>)" > <i class="bi bi-x-circle"></i> </a>
            
          </div>
        </div>
    </h5>


    <div class="card-body">
      
      <form action="/modify_touchpoint/<%= @the_touchpoint.id %>"  method="post" >
          
          <div class="col-md-4 mb-3">
            <label for="description_box" class="form-label text-truncate">Description</label>
            <input id="description_box" name="query_description" type="text" class="form-control" value="<%= @the_touchpoint.description%>">
          </div>

          <div class="col-md-4 mb-3">
            <label for="date_box" class="form-label text-truncate">Date</label>
            <input id="date_box" name="query_date" type="date" class="form-control" value="<%= @the_touchpoint.date.strftime('%Y-%m-%d') %>">
          </div>

          <div class="col mb-3">
            <textarea id="notes_box" name="query_notes" type="text" class="form-control h-100"> <%= @the_touchpoint.notes%> </textarea>
          </div> 

          <div class="col-md-2 mb-3 my-auto">
            <button class="btn btn-primary text-truncate">Save changes</button>
          </div>

      </form>

    </div>
  </div>
</div>
